<div {{bind-attr class="recordType"}}>
  {{link-to 'Create' 'model-records.new'}}
  <table>
    <tr>
      {{#each column in filteredColumns}}
        <td>{{column}}</td>
      {{/each}}
    </tr>
    {{#each record in records}}
      <tr>
        {{#each column in filteredColumns}}
        <td>
          {{#link-to 'model-records.edit' record}}
            {{property-print record column}}
          {{/link-to}}
        </td>
        {{/each}}
      </tr>
    {{/each}}
  </table>
</div>
